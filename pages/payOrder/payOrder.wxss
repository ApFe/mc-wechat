/* pages/payOrder/payOrder.wxss */
.payorder_box .payorder_comm_box{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    width: 674rpx;
    height: 277rpx;
    border-radius: 30rpx;
    margin-bottom: 30rpx;
}
.payorder_box .box{
    display: flex;
    align-items: center;
    width: 594rpx;
    flex: 1;
}
.payorder_box .payorder_Img{
    width: 123rpx;
    height: 123rpx;
    margin-right: 30rpx;
}
.payorder_box .pay_text_box{
    flex: 1;
    display: flex;
    align-items: center;
}
.payorder_box .gl_text_all{
    font-size: 28rpx;
    line-height: 2;
    color: rgb(104, 104, 104);
    flex: 1;
    display: flex;
    flex-direction: column;
}
.payorder_box .g_l_text_two{
    font-size: 18rpx;
    line-height: 1.5;
    color: rgb(177, 177, 177);
    
}
.payorder_box .g_l_text_btn_box{
    font-size: 24rpx;
    line-height: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: rgb(104, 104, 104);
}
.payorder_box .g_l_text_btn_one{
    color: rgb(82, 109, 226);
}
.payorder_box .gl_ttle_text{
    width: 592rpx;
    font-size: 24rpx;
    height: 90rpx;
    color: rgb(177, 177, 177);
    display: flex;
  justify-content: flex-end;
}
.payorder_box .gl_ttle_text .gl_ttle_text_two{
    color: rgb(82, 109, 226);
}
.payorder_box .tishi{
    width: 594rpx;
    height: 70rpx;
    border-top: 2rpx dashed rgb(216, 216, 216);
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
.payorder_box .ts_txt{
    flex: 1;
    font-size: 24rpx;
    color: rgb(107, 107, 107);
}
.payorder_box .tishi_Img{
    width: 32rpx;
    height: 32rpx;
    margin-right: 22rpx;
}
.payorder_box .payoo_box{
    flex: 1;
    display: flex;
    align-items: center;
    margin-left: 35rpx;
}
.payorder_box .t_one{
    font-size: 24rpx;
    color: rgb(177, 177, 177);
}
.payorder_box .t_two{
    font-size: 24rpx;
    color: rgb(82, 109, 226);
}
.payorder_box .btn_pay_order{
    margin-right: 35rpx;
    width: 160rpx;
    height: 60rpx;
    font-size: 26rpx;
    color: #ffffff;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
}
.payorder_box .payorder_two_text{
    color: rgb(104, 104, 104);
    font-size: 24rpx;
}
.payorder_box .payorder_one_text{
    font-size: 24rpx;
}